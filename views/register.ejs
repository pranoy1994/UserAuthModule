<% include ./partials/header.ejs %>
    <div class="page">
        <div class="logo-area col">
            <img class="logo" src="/assets/apollo.png" />
        </div><div class="form-area col">
            <div class="alert">
                <% if(success && success.length>0){ %>
                    <div class="alert alert-success" role="alert"><%= success %></div>
                <% } %>
                <% if(error && error.length>0){ %>
                    <div class="alert alert-danger" role="alert"><%= error %></div>
                <% } %>
            </div>
            <h2>Create an Apollo ID</h2>
            <p>Your Apollo ID manages your email address. Add your email account after registering.</p>
            <br/>
            <form method='POST' action='/register'>
                <div class='form-group'>
                    <input style="padding:2.5%; width:40%" class="firstname form-control" type="text" name="firstname" placeholder="FIRST NAME" 
                    /><input style="padding:2.5%; width:40%" class="lastname  form-control" type="text" name="lastname" placeholder="LAST NAME" />
                </div>
                <div class='form-group'>
                    <input style="padding:2.5%; width:80%; margin:auto" class="form-control" id="email" type="email" name="email" placeholder="EMAIL" />
                </div>
                <div class='form-group'>
                    <input style="padding:2.5%; width:80%; margin:auto" class="form-control" type="password" name="password" placeholder="PASSWORD" />
                </div>
                <div class='form-group'>
                    <input style="width:80%" class="btn btn-lg btn-primary" type="submit" value="Create my Apollo ID" onclick="convert()" />                  
                </div>
                <a href="/login">Already have Apollo ID?Sign In</a>
            </form>
            <br/>
            <p>By Creating an account you agree to Apollo Terms of Service and Privacy Policy.</p>
        </div>
    </div>
    <script type="text/javascript">
        function convert() {
            var str;
            var srch=document.getElementById("email");
            str = srch.value;
            srch.value=str.toLowerCase();
        }
    </script>
<% include ./partials/footer.ejs %> 